<h1>Players</h1>

<%=link_to '/players/new' do%>
    <div class="add-new">
        Add Player
    </div>
<%end%> <br><br>

<%@players.sort_by{|p| p.first_name}.each do |player|%>
    
    <div class="player-card">
        <%=link_to "/players/#{player.slug}" do%>
            <%=player.fullname%> 
            <%=image_tag player.country.flag_image, class: "index-flag"%> <br><br>
            <%=image_tag player.player_image, :class=>"player-index-img"%>
        <%end%>
    </div>
    
<%end%> 