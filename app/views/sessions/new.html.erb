<%=render 'background'%>

<div class="flash-msg">
    <%= flash[:message] if flash[:message]%>
</div>
<h3 class="form-header">Log In</h3>


<div class="user-form">
    <%=form_for :user, html:{autocomplete: "disabled"} do |f|%>
        <%=f.text_field :name, placeholder: "Name", autocomplete: "disabled"%> <br><br>

        <%=f.password_field :password, placeholder: "Password", autocomplete: "new-password"%> <br><br>

        <%=f.submit "Submit", id: "submit"%>
    <%end%>
    
    <p class="signup-login">Not yet a user?&nbsp; <%=link_to "Sign Up", signup_path%></p>

    <p class="social-login"><%= link_to('Log in with Facebook', '/auth/facebook') %></p>
</div> <br>



